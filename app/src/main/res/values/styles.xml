<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>



    <style name="MyEditex">
        <item name = "android:layout_width">@dimen/layout_with_edit</item>
        <item name = "android:layout_height">@dimen/layout_height_edit</item>
        <item name = "android:layout_marginTop">@dimen/layout_marginTop</item>
        <item name = "android:gravity">center</item>
        <item name = "android:background">#FFFF</item>
    </style>

    <style name="MyButton_uno">
        <item name = "android:layout_width">@dimen/layout_with_button</item>
        <item name = "android:layout_height">@dimen/layout_height_button</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_marginTop">@dimen/layout_marginTop</item>
        <item name = "android:background">#ff5559ff</item>
    </style>

    <style name="MyButton_dos">
        <item name = "android:layout_width">@dimen/layout_with_button</item>
        <item name = "android:layout_height">@dimen/layout_height_button</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_marginTop">@dimen/layout_marginTop</item>
        <item name = "android:background">#ff48ff31</item>
    </style>

    <style name="MyEdith_registre">
        <item name = "android:layout_width">@dimen/layout_with_edit_registro</item>
        <item name = "android:layout_height">@dimen/layout_height_edit_registro</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:layout_marginTop">@dimen/layout_marginTop_registro</item>
        <item name = "android:gravity">center</item>


        <item name = "android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name = "android:background">@drawable/edith_register_usuario</item>
    </style>

    <style name="MyButton_registro">
        <item name = "android:layout_width">@dimen/layout_with_button_registro</item>
        <item name = "android:layout_height">@dimen/layout_height_button_registro</item>
        <item name = "android:layout_gravity">center_horizontal</item>
        <item name = "android:gravity">center</item>
        <item name = "android:layout_marginTop">@dimen/layout_marginTop_button_registro</item>
        <item name = "android:background">#ff48ff31</item>
    </style>

    <style name="MyEdith_main_login">
        <item name = "android:layout_width">@dimen/layout_width_main_edith</item>
        <item name = "android:layout_height">@dimen/layout_height_main_edith</item>
        <item name = "android:textSize">@dimen/text_size_main_edith</item>

        <item name = "android:layout_marginTop">@dimen/layout_marginTop_main_edith</item>
        <item name = "android:gravity">center</item>

    </style>

    <style name="MyButton_main_user_login">
        <item name = "android:layout_width">@dimen/layout_width_user_button</item>
        <item name = "android:layout_height">@dimen/layout_height_user_button</item>
        <item name = "android:textSize">@dimen/text_size_user_button</item>

        <item name = "android:layout_marginTop">@dimen/layout_marginTop_user_button</item>
        <item name = "android:gravity">center</item>


    </style>

    <style name="MyButton_User">
        <item name = "android:layout_width">@dimen/layout_width_user_button_activity</item>
        <item name = "android:layout_height">@dimen/layout_height_user_button_activity</item>
        <item name = "android:layout_marginTop">@dimen/layout_marginTop_user_button_activity</item>
        <item name = "android:textSize">@dimen/text_size_user_activity_button</item>
        <item name = "android:gravity">center</item>
    </style>

    <style name="MyImage_User_Data">
        <item name="android:layout_marginLeft">@dimen/layout_marginLeft_user</item>
        <item name="android:layout_marginRight">@dimen/layout_marginRight_user</item>
    </style>

    <style name="foodRatingBaro" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/estrella</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>


    <style name="ButtonText">
        <item name="android:layout_width">220dp</item>
        <item name="android:layout_height">66dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/food_ratingbar_full</item>
        <item name="android:minHeight">128dip</item>
        <item name="android:maxHeight">128dip</item>
    </style>

    <style name="foodRatingBaros" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/twiter</item>
        <item name="android:minHeight">128dip</item>
        <item name="android:maxHeight">128dip</item>
    </style>
</resources>
