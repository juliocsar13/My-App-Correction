<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="false"
    tools:context="com.example.julio.my_app_correction.MainActivity2"
    android:orientation="vertical"
    android:background="@drawable/profondos">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Registrate Aqui"
        android:id="@+id/textView"
        android:ellipsize = "start"
        android:singleLine="true"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="text"
        android:layout_gravity="center_horizontal" />

    <EditText
        style="@style/MyEdith_registre"
        android:ems="10"
        android:ellipsize = "start"
        android:singleLine="true"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="text"
        android:hint="@string/usuario_register"
        android:id="@+id/edtUserName" />

    <EditText
        style="@style/MyEdith_registre"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:ellipsize = "start"
        android:singleLine="true"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:maxLength="15"
        android:id="@+id/edtPassword" />

    <EditText
        style="@style/MyEdith_registre"
        android:ems="10"
        android:ellipsize = "start"
        android:singleLine="true"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="text"
        android:hint="@string/name"
        android:id="@+id/edtName"/>

    <EditText
        style="@style/MyEdith_registre"
        android:ems="10"
        android:ellipsize = "start"
        android:singleLine="true"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="text"
        android:hint="@string/lastname"
        android:id="@+id/edtLastName" />

    <EditText
        style="@style/MyEdith_registre"
        android:ems="10"
        android:ellipsize = "start"
        android:singleLine="true"
        android:imeOptions="actionNext|flagNoExtractUi"
        android:inputType="text"
        android:hint="@string/Email"
        android:id="@+id/edtEmail"/>

    <EditText

        style="@style/MyEdith_registre"
        android:ems="10"
        android:ellipsize = "start"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:imeActionId="@+id/btnRegister"
        android:hint="@string/numbertelefono"
        android:id="@+id/edtPhoneNumber" />

    <Button


        style="@style/MyButton_registro"
        android:text="Registrarse"
        android:ellipsize = "start"
        android:singleLine="true"
        android:id="@+id/btnRegister"/>






</LinearLayout>


