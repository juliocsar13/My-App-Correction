<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_nota"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/image_desing_border"
            android:src="@drawable/ic_action_database"
            android:padding="7dp"
            android:layout_marginRight="5dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="left|center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff17a9e8"
                android:textSize="15dp"
                android:text="Referencias :"
                android:layout_marginTop="-5dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="text para la informacion personal del usuario, una referencia de como es que esta vestido, etc. para una mayor localizacion"
                android:textSize="11dp"
                android:layout_marginLeft="2dp"
                android:gravity="left|center" />
        </LinearLayout>
        </LinearLayout>
</LinearLayout>
