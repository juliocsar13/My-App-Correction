<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profondos"
    android:gravity="center"
    android:id="@+id/julio">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/llevametaxi"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <EditText

            style="@style/MyEdith_main_login"
            android:ems="10"
            android:hint="Usuario"
            android:gravity="center"
            android:background="#ffff"
            android:id="@+id/editusuario1"/>

        <EditText

            style="@style/MyEdith_main_login"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:id="@+id/edit_usuario1"
            android:maxLength="20"
            android:gravity="center"
            android:background="#ffff"
            android:textColor="#000000"
            android:password="true" />

        <Button
            style="@style/MyButton_main_user_login"
            android:background="#000000"
            android:text="LOGIN"
            android:nestedScrollingEnabled="false"
            android:onClick="startActivityList"
            android:textColor="#EEEEEE"
            android:shadowColor="#ff000000"
            android:shadowRadius="1.7"
            android:shadowDx="1"
            android:shadowDy="2"/>
        />
    </LinearLayout>

</LinearLayout>