<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.julio.my_app_correction.MainActivity9">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/editText_estilo"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint="ESTILO"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/edith_registro_change_dos"/>

        <EditText
            android:id="@+id/editText_nativo"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:gravity="center"
            android:hint="NATIVO"
            android:layout_marginTop="20dp"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="VERDE MIERDA"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/edith_registro_change_tres"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="ROJJO"
            android:gravity="center"
            android:background="@drawable/edith_registro_change_cuatro"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="VERDE OBSCURO MIERDA"
            android:layout_marginTop="20dp"
            android:background="@drawable/edith_registro_change_cinco"/>

    </LinearLayout>

</LinearLayout>
