<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_action_user"
                android:layout_marginLeft="@dimen/layout_left_image" />
            <TextView
                android:id="@+id/txtNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/name"
                android:layout_marginLeft="@dimen/layout_left_text"
                android:textSize="@dimen/textsize_data_taxtista" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_action_phone_start"
                android:layout_marginLeft="@dimen/layout_left_image"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="telefono"
                android:layout_marginLeft="@dimen/layout_left_text"
                android:textSize="@dimen/textsize_data_taxtista" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="2dp">
            <ImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/ic_action_location"
                android:layout_marginLeft="@dimen/layout_left_image"/>
            <TextView
                android:id="@+id/txtNumberUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="direccion"
                android:layout_marginLeft="@dimen/layout_left_text"
                android:textSize="@dimen/textsize_data_taxtista" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marignTop_comentario"
            android:padding="@dimen/layout_padding_text_coment"
            android:gravity="center">

            <TextView
                android:id="@+id/txtAddressUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/layout_padding_text_coment"
                android:textSize="@dimen/textsize_comentario"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

